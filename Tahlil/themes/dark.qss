/* Dark Theme */
QWidget { background: #121212; color: #e0e0e0; font-family: "Segoe UI"; font-size: 10.5pt; }
QHeaderView::section { background: #1e88e5; color: white; font-weight: bold; padding: 4px; border: 1px solid #1565c0; }
QTableView { gridline-color: #424242; selection-background-color: #1565c0; alternate-background-color: #1d1d1d; }
QLineEdit { background: #1d1d1d; border: 1px solid #1565c0; padding: 2px; color: #e0e0e0; }
QToolBar { background: #1d1d1d; spacing: 6px; border: none; }
